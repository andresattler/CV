@page {
  size A4
  margin 0
}
html
  background black
body
  margin 0
  background-color white
  width 210mm
  height 297mm
  font-family Source Code Pro
header
  display flex
  height 20%
  width 100%
  background-color #2e3440
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
  .profile
    height 55mm
    width 55mm
    border-radius 50%
    overflow hidden
    text-align center
    border 1mm solid #333
    margin .1mm
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    img
      width 100%
  .heading
    width 155mm
    text-align center
    h1
      display inline-block
      padding 1mm
      font-size 46px
      font-weight bold
      border-radius 1mm
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
      font-size 10px
      white-space pre-wrap
      color #bf616a
    .contacts
      display inline-block
      text-align left
      padding 1mm
      font-size 11px
      color #d6d6d6
      p
        margin 0
        font-weight bold
        white-space pre-wrap
      a
        text-decoration none
        color inherit
    .cli-info
      color #d6d6d6
      font-size 12px
main
  width 100%
  height 80%
  display flex
  flex-flow column
  align-items center
  background-color #2e3440
  section
    color #d6d6d6
    margin-top 5mm
    border-radius 1mm
    width 90%
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    padding 2mm
    h2
      background-color #bf616a
      margin 0
      padding 1mm
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)

footer
  .coffee
    color #bf616a
  .link
    color #d6d6d6
