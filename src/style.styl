background-color = #002b36
title-color = #268bd2
font-color = #eee8d5
section-title-color = font-color

@page {
  size A4
  margin 0
}
html
  background black
body
  margin 0
  background-color white
  width 210mm
  height 297mm
  font-family Source Code Pro
header
  display flex
  height 20%
  width 100%
  background-color background-color
  box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
  .profile
    height 55mm
    width 55mm
    border-radius 50%
    overflow hidden
    text-align center
    border 1mm solid #333
    margin .1mm
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    img
      width 100%
  .heading
    width 155mm
    text-align center
    h1
      display inline-block
      padding 1mm
      font-size 46px
      font-weight bold
      border-radius 1mm
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
      font-size 10px
      white-space pre-wrap
      color title-color
    .contacts
      display inline-block
      text-align left
      padding 1mm
      font-size 11px
      color font-color
      p
        margin 0
        font-weight bold
        white-space pre-wrap
      a
        color inherit
    .cli-info
      color font-color
      font-size 12px
main
  width 100%
  height 80%
  display flex
  flex-flow column
  align-items center
  background-color background-color
  section
    color font-color
    margin-top 5mm
    border-radius 1mm
    width 90%
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    padding 2mm
    h2
      background-color title-color
      margin 0
      padding 8px 16px
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    a
      color inherit

footer
  .coffee
    color title-color
  .link
    color font-color
